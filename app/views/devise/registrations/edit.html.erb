
<div class="w-full h-100">

  <nav class="flex justify-between w-full bg-purple-500 text-white p-4">
    <a href="/"><span class="font-semibold text-xl tracking-tight">Blog</span></a>
    <div class="md:items-center md:w-auto flex">
      <div class="flex text-sm" v-else>
        <%= link_to "Profile", edit_user_registration_path, class: 'p-3 block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg'  %>
      </div>
      <div class="flex text-sm" v-else>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'p-3 block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg'  %>
      </div>
    </div>
  </nav>

  <div class="m-4">
      <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Edit profile</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none", placeholder:"Enter email address", required: "required" %>
        </div>

        <div class="mt-4">

          <%= f.label :password, class: "block text-gray-70" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", type:"password", required: "required", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none", placeholder:"Password", minlength:"8" %>

          <%= f.label :password_confirmation, class: "block text-gray-70" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", required: "required", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none", placeholder:"Password confirmation", minlength:"8" %>

          <%= f.label :current_password, class: "block text-gray-70" %>
          <%= f.password_field :current_password, autocomplete: "current-password", type:"password", required: "required", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none", placeholder:"Password confirmation", minlength:"8" %>

        </div>

        <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
              px-4 py-3 mt-6">Update Account</button>
      <% end %>

      <hr class="my-6 border-gray-300 w-full">

      <% if !current_user.authy_enabled? %>
        <p class="mt-8"> <%= link_to "Enable Two Factor?", user_enable_authy_path, class: "text-blue-500 hover:text-blue-700 font-semibold" %></p>
      <% else %>
      <p class="mt-8">
        Two factor has already been enabled for this account.</p>
      <% end %>
    </div>

</div>








